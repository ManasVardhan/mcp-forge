[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
license = "MIT"
requires-python = ">=3.10"
authors = [{ name = "{{ author }}" }]
dependencies = []

[project.scripts]
{{ project_name }} = "{{ pkg_name }}.server:main"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ pkg_name }}"]
